# 3GIS Environment Variables Template
# Скопируйте этот файл в .env и заполните реальными значениями

# Database
DATABASE_URL="postgresql://user:password@host:port/dbname"
DIRECT_URL="postgresql://user:password@host:port/dbname"

# Telegram Bot
NEXT_PUBLIC_TELEGRAM_BOT_USERNAME="ThreeGIS_bot"
TELEGRAM_BOT_TOKEN="your_bot_token_here"

# App URLs для локальной разработки
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_WEBSITE_URL="http://localhost:3000"

# App URLs для продакшена (закомментированы для локальной разработки)
# NEXT_PUBLIC_APP_URL="https://3gis.biz"
# NEXT_PUBLIC_WEBSITE_URL="https://3gis.biz"

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
S3_BUCKET_NAME=3gis-photos
NEXT_PUBLIC_S3_BASE_URL=https://3gis-photos.s3.us-east-1.amazonaws.com

# Google Maps
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# JWT Secret для авторизации
JWT_SECRET=your_super_secret_jwt_key_for_3gis_app_2025

# Отладка авторизации (убрать в продакшене!)
SKIP_TELEGRAM_VALIDATION=true
